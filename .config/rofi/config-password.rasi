configuration {
    modi:                       "drun,run";
    font:                       "Mononoki 14";
    show-icons:                 false;
    icon-theme:                 "kora";
    display-drun:               "∂";
    display-run:                "∂";
    display-filebrowser:        "FILES";
    display-window:             "WINDOW";
	  drun-display-format:        "{name}";
    hover-select:               false;
    scroll-method:              1;
    me-select-entry:            "";
    me-accept-entry:            "MousePrimary";
    window-format:              "{w} · {c} · {t}";
    
}

window {
    width:                        350px;
    x-offset:                     0px;
    y-offset:                     0px;
    spacing:                      0px;
    padding:                      10px;
    margin:                       0px; 
    border:                       0px;
    border-color:                 transparent;
    cursor:                       "default";
    transparency:                 "real";
    location:                     center;
    anchor:                       center;
    fullscreen:                   false;
    enabled:                      true;
    border-radius:                12px;
}

prompt {
    padding: 0 5px 0 5px;
}

inputbar {
    children: ["prompt", "entry"];
    spacing: 2px;
    border-radius: 8px;
    padding: 4px;
}

entry {
    placeholder: "password";
    padding: 2px;
}

mainbox {
    spacing: 4px;
    margin: 0;
    padding: 0;
    children: ["inputbar"];
}

